<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista_semana">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#e3e3e3">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#e3e3e3"
                android:text="Anterior"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/fecha_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Febrero\n Lunes 5 "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#e3e3e3"
                android:text="Siguiente"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:id="@+id/bnt_lunes"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="Lu"
                android:textColor="@color/black"
                />
            <Button
                android:id="@+id/bnt_martes"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Ma"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>
            <Button
                android:id="@+id/bnt_miercoles"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Mi"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>
            <Button
                android:id="@+id/bnt_jueves"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Ju"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>
            <Button
                android:id="@+id/bnt_viernes"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Vi"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>
            <Button
                android:id="@+id/bnt_sabado"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Sa"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>
            <Button
                android:id="@+id/bnt_domingo"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Do"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scrollbars="none"
            android:fadingEdge="vertical">
            <LinearLayout
                android:id="@+id/container_semana"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Actividad 1"
                        android:textSize="16dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Actividad 1"
                        android:textSize="16dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Actividad 1"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_menu_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginLeft="100dp"
            app:srcCompat="@android:drawable/ic_input_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_agenda" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/btn_star" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_share" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>